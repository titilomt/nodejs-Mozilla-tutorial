extends layout

block content

  h1 Author: #{author.family_name}, #{author.first_name}
  p #{author.date_of_birth} - #{author.date_of_death}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
      each book in author_books
        dt 
          a(href=`/catalog/book/${book._id}`) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.

  hr
  p
    a(href=`/catalog/author/${author._id}/delete`) Delete author
  
  hr
  p
    a(href=`/catalog/author/${author._id}/update`) Update author