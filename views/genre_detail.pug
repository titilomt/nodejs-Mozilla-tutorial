extends layout

block content

  h1 Genre: #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
      each book in genre_books
        dt 
          a(href=`/catalog/book/${book._id}`) #{book.title}
        dd #{book.summary}

      else
        p This genre has no books
  hr
  p
    a(href=`/catalog/genre/${genre._id}/delete`) Delete genre
  p
    a(href=`/catalog/genre/${genre._id}/update`) Update genre